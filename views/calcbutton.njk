{% extends "layout.njk" %}
{% block content %}
<main class="container">
    <h1>{{title}}</h1>
    <form action="/calc/button" method="get">
        <input type="number" name="V1" placeholder="Waiting for value" value="{{number1}}">
        <input type="number" name="V2" placeholder="Waiting for value" value="{{number2}}">

        <button type="submit" value="add" name="button">add</button>
        <button type="submit" value="multiply" name="button">multiply</button>
        <button type="submit" value="subtract" name="button">subtract</button>
        <button type="submit" value="divide" name="button">divide</button>
    </form>
    <p>{{ sum }}</p>
</main>
{% endblock %}